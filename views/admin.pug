extends ./template.pug

block tabs
	li.is-active
		a(href="/") Faucet
	li
		a(href="/cooldowns") Cooldowns
	li
		a(href="/about") About

block body
	div.level.is-mobile
		div.level-item.has-text-centered
			div
				p.heading Address(es) known
				p.title #{status.addressesKnown}
		div.level-item.has-text-centered
			div
				p.heading Total #{locals.ticker} sent
				p.title #{status.totalCoinsSent}

	nav.tile.is-ancestor
		p gay
